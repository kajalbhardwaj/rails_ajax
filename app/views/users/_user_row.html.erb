<tr id="userRow_<%= user.id%>">
    <td><%= user.name %></td>
    <td><%= user.address %></td>
    <td><%= user.phone_no %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user), data: {bs_toggle: 'modal', bs_target: '#editUserModal', remote:true} %></td>
    <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>